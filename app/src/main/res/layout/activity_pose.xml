<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/poseImage"
        android:layout_width="231dp"
        android:layout_height="196dp"
        android:src="@drawable/baseline_image_not_supported_24"
        app:layout_constraintBottom_toTopOf="@+id/poseEnName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="@+id/poseEnName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poseEnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Pose Name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sanskritName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poseImage" />

    <TextView
        android:id="@+id/sanskritName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanskrit Name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/poseDescription"
        app:layout_constraintStart_toStartOf="@+id/poseEnName"
        app:layout_constraintTop_toBottomOf="@+id/poseEnName" />

    <TextView
        android:id="@+id/poseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Pose Description"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/poseBenefits"
        app:layout_constraintStart_toStartOf="@+id/sanskritName"
        app:layout_constraintTop_toBottomOf="@+id/sanskritName" />

    <TextView
        android:id="@+id/poseBenefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="271dp"
        android:padding="12dp"
        android:text="Pose Benefits"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="@+id/poseDescription"
        app:layout_constraintTop_toBottomOf="@+id/poseDescription" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>